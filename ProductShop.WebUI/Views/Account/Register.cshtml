@model ProductShop.WebUI.Integrations.ProductShopApi.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginRegister_Layout.cshtml";
}



<div class="container ">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-sm-12">
            <div class="text-center">
                <img class="logo" src="~/itsdeal_logo.png" alt="">
                
            </div><br />
            <form class="card auth_form" asp-action="Register" method="post">
                <div class="header">
                    <h5>Registration</h5>
                </div>
                <div class="body">
                    <div class="input-group mb-3">
                        <input type="text" asp-for="FirstName" class="form-control bg" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter first name">
                        <div class="input-group-append">
                            <span class="input-group-text bg"><i class="zmdi zmdi-account-circle"></i></span>
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                    </div>
                    <div class="input-group mb-3">
                        <input type="text" asp-for="LastName" class="form-control bg" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter last name">
                        <div class="input-group-append">
                            <span class="input-group-text bg"><i class="zmdi zmdi-account-circle"></i></span>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="email" asp-for="Email" class="form-control bg" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                        <div class="input-group-append">
                            <span class="input-group-text bg"><i class="zmdi zmdi-email"></i></span>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" asp-for="Password" class="form-control bg" id="exampleInputPassword1" placeholder="Password">
                        <div class="input-group-append">
                            <span class="input-group-text bg"><i class="zmdi zmdi-lock"></i></span>
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" asp-for="ConfirmPassword" class="form-control bg" id="exampleInputPassword1" placeholder="Confirm Password">
                        <div class="input-group-append">
                            <span class="input-group-text bg"><i class="zmdi zmdi-lock"></i></span>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block waves-effect waves-light w-25 float-right">REGISTER</button><br /><br />
                    <span class="float-right mt-2">Already have an account ? <a href="/Account/Login">Sign In</a> </span><br />




                </div>
            </form>

        </div>

    </div>
</div>





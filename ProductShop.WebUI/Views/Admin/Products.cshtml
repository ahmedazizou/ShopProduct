@model IEnumerable<ProductShop.WebUI.Integrations.ProductShop.Api.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}




<div class="block-header mb-5 mb-lg-0">
    <div class="row">
        <div class="col-sm-12">

            <button class="btn btn-info btn-icon mobile_menu " type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="card">
        <div class="card-header d-flex">
            <h5>Product List</h5>


            <a href="/Admin/AddEditProduct" class="btn btn-primary ml-auto">Add Product</a>

        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card">
                <div class="table-responsive">
                    <table class="table table-hover product_item_list c_table theme-color mb-0">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th data-breakpoints="sm xs">Detail</th>
                                <th data-breakpoints="xs">Amount</th>
                                <th data-breakpoints="xs md">Stock</th>
                                <th data-breakpoints="sm xs md">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="https://localhost:44324/Uploads/@(item.Image)" width="48" alt="@item.Name" asp-append-version="true"></td>
                                    <td><h5>@item.Name</h5></td>
                                    <td><span class="text-muted">@item.Detail</span></td>
                                    <td>$@item.Amount</td>
                                    <td><span class="col-green">@item.Stock"</span></td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Admin", new {id=item.Id})" class="btn btn-default waves-effect waves-float btn-sm waves-green"><i class="zmdi zmdi-edit"></i></a>
                                        <a href="@Url.Action("Delete", "Admin", new {id=item.Id})" class="btn btn-default waves-effect waves-float btn-sm waves-red"><i class="zmdi zmdi-delete"></i></a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
    </div>
</div>







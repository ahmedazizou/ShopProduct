@model IEnumerable<ProductShop.WebUI.Integrations.ProductShopApi.Models.User>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
@if (TempData["SuccessMsg"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMsg"]
    </div>
}
<div class="block-header mb-5 mb-lg-0">
    <div class="row">
        <div class="col-sm-12">

            <button class="btn btn-info btn-icon mobile_menu " type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="card">
        <div class="card-header d-flex">
            <h5>Users</h5>


            <a href="/Admin/RegisterUserAdmin" class="btn btn-primary ml-auto">Add new user</a>

        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card">
                <div class="table-responsive">
                    <table class="table table-hover product_item_list c_table theme-color mb-0">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th data-breakpoints="sm xs">Last Name</th>
                                <th data-breakpoints="xs">Email</th>
                                <th data-breakpoints="xs md">Password</th>
                                <th data-breakpoints="xs md">IsClient</th>
                                <th data-breakpoints="sm xs md">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><h5>@item.FirstName</h5></td>
                                <td><span class="text-muted">@item.LastName</span></td>
                                <td>@item.Email</td>
                                <td><span class="col-green">@item.Password"</span></td>
                                <td><span class=@(@item.IsClient ==true ? "col-green":"col-red")>@item.IsClient"</span></td>
                                <td>
                                    <a href="@Url.Action("EditUser", "Admin", new {id=item.Id})" class="btn btn-default waves-effect waves-float btn-sm waves-green"><i class="zmdi zmdi-edit"></i></a>
                                    <a href="@Url.Action("DeleteUser", "Admin", new {id=item.Id})" class="btn btn-default waves-effect waves-float btn-sm waves-red"><i class="zmdi zmdi-delete"></i></a>
                                </td>
                            </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Favicon-->
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/plugins/footable-bootstrap/css/footable.bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/plugins/footable-bootstrap/css/footable.standalone.min.css">

    <!-- Custom Css -->
    <link rel="stylesheet" href="~/assets/css/style.min.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .bg {
            background: white;
        }
    </style>
</head>
<body class="theme-blush">
    <!-- Page Loader -->
    @*<div class="page-loader-wrapper">
            <div class="loader">
                <div class="m-t-30"><img class="zmdi-hc-spin" src="~/assets/images/loader.svg" width="48" height="48" alt="Aero"></div>
                <p>Please wait...</p>
            </div>
        </div>*@

    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>





    <!-- Left Sidebar -->
    <aside id="leftsidebar" class="sidebar">
        <div class="navbar-brand">
            <button class="btn-menu ls-toggle-btn" type="button"><i class="zmdi zmdi-menu"></i></button>
            <a href="index.html"><img src="~/assets/images/logo.svg" width="25" alt="Aero"><span class="m-l-10">Product Shop</span></a>
        </div>
        <div class="menu">
            <ul class="list">
                <li>
                    <div class="user-info">
                        <a class="image" href="profile.html"><img src="~/assets/images/avatar.png" alt="User"></a>
                        <div class="detail">
                            <h4>@Context.Session.GetString("FullName")</h4>
                            <small>Super Admin</small>
                        </div>
                    </div>
                </li>
                <li>
                    <ul>
                        <li><a href="/admin/allproducts">Product List</a></li>
                        <li><a href="/admin/addeditproduct">Add Edit Product</a></li>
                        <li><a href="/admin/manageUsers">Users</a></li>
                        @if (Context.Session.GetInt32("UserId") > 0)
                        {
                            <li>
                                <a href="@Url.Action("Logoff","Admin")">Logoff</a>

                            </li>
                        }

                    </ul>
                    @*<a href="javascript:void(0);" class="menu-toggle"><i class="zmdi zmdi-apps"></i><span>Ecommerce</span></a>*@

                </li>



            </ul>
        </div>
    </aside>




    <section class="content">
        <div class="body_scroll">


            @RenderBody()

        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/assets/bundles/libscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
    <script src="~/assets/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->

    <script src="~/assets/bundles/footable.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
    @*<script src="~/assets/bundles/mainscripts.bundle.js"></script>
        <script src="~/assets/js/pages/tables/footable.js"></script>*@
</body>
</html>
